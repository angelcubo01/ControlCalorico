                    <MenuItem.Icon >
                        <Rectangle Fill="#FB8500"></Rectangle>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Otros" >
                    <MenuItem.Icon >
                        <Rectangle Fill="#8D4C02"></Rectangle>
                    </MenuItem.Icon>
